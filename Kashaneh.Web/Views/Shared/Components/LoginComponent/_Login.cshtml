@model Kashaneh.Core.DTOs.LoginViewModel

<div class="modal fade" id="modal-signin" tabindex="-1" role="dialog" aria-labelledby="modal-signin" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">ورود</h4>
            </div>
            <form role="form" asp-controller="Account" asp-action="Login" method="post">
                <div class="modal-body">

                    <div class="form-group">
                        <label for="emailAddress">ایمیل</label>
                        <input type="email" class="form-control input-lg" placeholder="ایمیل" asp-for="Email">
                    </div>
                    <div class="form-group">
                        <label for="password">کلمه عبور</label>
                        <input type="password" class="form-control input-lg" placeholder="کلمه عبور" asp-for="Password">
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="forget" asp-for="RememberMe"> مرا بخاطر بسپار
                        </label>
                    </div>

                </div>
                <div class="modal-footer">
                    <p>آیا ثبت نام نکرده اید ? <a href="#modal-signup" data-toggle="modal" data-target="#modal-signup">ثبت نام</a></p>
                    <input type="submit" class="btn btn-primary btn-block btn-lg" value="ورود به سایت">
                </div>
            </form>
        </div>
    </div>
</div>